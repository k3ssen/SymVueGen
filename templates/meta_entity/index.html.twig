{% extends 'base.html.twig' %}

{% block title %}MetaEntity index{% endblock %}

{% block body %}
    <h1>MetaEntity index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Namespace</th>
                <th>Uses</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for meta_entity in meta_entities %}
            <tr>
                <td>{{ meta_entity.id }}</td>
                <td>{{ meta_entity.name }}</td>
                <td>{{ meta_entity.namespace }}</td>
                <td>{{ meta_entity.uses ? meta_entity.uses|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('meta_entity_show', {'id': meta_entity.id}) }}">show</a>
                    <a href="{{ path('meta_entity_edit', {'id': meta_entity.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('meta_entity_new') }}">Create new</a>
{% endblock %}
